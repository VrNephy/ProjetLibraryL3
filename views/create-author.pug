doctype html
html
  head
    title Create New Author
  body
    .sidebar
      button.sidebar-button#button1(onclick="location.href='/home'") Home
      button.sidebar-button#button2(onclick="location.href='/books'") All Books
      button.sidebar-button#button3(onclick="location.href='/authors'") All Authors
      button.sidebar-button#button4(onclick="location.href='/create-author'") Create new author
      button.sidebar-button#button5(onclick="location.href='/create-book'") Create new book
    .main-content
      h1 Create New Author
      form(action="/create-author", method="POST")
        label(for="first_name") First Name:
        input(type="text", name="first_name", id="first_name", required)

        label(for="family_name") Family Name:
        input(type="text", name="family_name", id="family_name", required)

        label(for="date_of_birth") Date of Birth:
        input(type="date", name="date_of_birth", id="date_of_birth", required)

        label(for="date_of_death") Date of Death:
        input(type="date", name="date_of_death", id="date_of_death")

        button(type="submit") Submit
